{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitOverride": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
        "lib": ["es2021", "dom"],
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "@vermascht/consumption": ["./src"],
            "@vermascht/transport": ["./node_modules/@vermascht/transport"],
            "chaimodule": ["./test/types/globalsals"],
            "@nmshd/crypto": ["./node_modules/@nmshd/crypto"],
            "@js-soft/ts-serval": ["./node_modules/@js-soft/ts-serval"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["tmp-browser", "lib-web", "lib-node", "lib-esm", "lib-test"]
}
