{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "../lib-test",
        "strict": true,
        "noImplicitOverride": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
        "lib": ["es2021", "dom"],
        "typeRoots": ["../node_modules/@types"],
        "baseUrl": "../",
        "paths": {
            "chaimodule": ["test/types/globalsals"],
            "@vermascht/transport": ["node_modules/@vermascht/transport"],
            "@vermascht/content": ["node_modules/@vermascht/content"],
            "@vermascht/consumption": ["src"],
            "@js-soft/ts-serval": ["node_modules/@js-soft/ts-serval"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": []
}
